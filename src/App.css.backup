.App {
  text-align: center;
}

.game-board {
  display: grid;
  grid-template-columns: 1fr auto;
  grid-template-rows: 170px 220px 220px 230px;
  grid-template-areas:
    "game-info opponent-stats"
    "opponent-field opponent-field"
    "player-field player-field"
    "player-hand player-stats";
  height: 900px;
  gap: 8px;
  padding: 8px;
  box-sizing: border-box;
  overflow: hidden;
}

/* ã‚¨ãƒªã‚¢åˆ¥ã‚¹ã‚¿ã‚¤ãƒ« */
.opponent-stats-area {
  grid-area: opponent-stats;
  border: 2px solid #f44336;
  border-radius: 6px;
  padding: 8px;
  background-color: #ffebee;
  width: 180px;
  display: flex;
  flex-direction: column;
}

.game-info-area {
  grid-area: game-info;
  border: 2px solid #2196f3;
  border-radius: 6px;
  padding: 8px;
  background-color: #e3f2fd;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.opponent-field-area {
  grid-area: opponent-field;
  border: 2px solid #f44336;
  border-radius: 6px;
  padding: 8px;
  background-color: #ffebee;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.player-field-area {
  grid-area: player-field;
  border: 2px solid #4caf50;
  border-radius: 6px;
  padding: 8px;
  background-color: #e8f5e8;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.player-stats-area {
  grid-area: player-stats;
  border: 2px solid #4caf50;
  border-radius: 6px;
  padding: 8px;
  background-color: #e8f5e8;
  width: 180px;
  display: flex;
  flex-direction: column;
}

.player-hand-area {
  grid-area: player-hand;
  border: 2px solid #4caf50;
  border-radius: 6px;
  padding: 8px;
  background-color: #e8f5e8;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

